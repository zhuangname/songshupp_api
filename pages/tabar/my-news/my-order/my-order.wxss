page{
  background-color: #F5F5F5;
}

.nav{
  width: 100%;
  height: 80rpx;
  font-size: 28rpx;
  background-color: #fff;
  justify-content: space-between;
  display: flex;
  flex-direction: row;
  position: fixed;
  top: 0;
  z-index: 99;
}

.nav-item{
  font-size: 28rpx;
  width: 20%;
  text-align: center;
  line-height: 80rpx;
  color: #666;
}

.active{
  color: red;
}
.navborder{
  position: absolute;
  width: 50rpx;
  height: 7rpx;
  background: red;
  border-radius: 5rpx;
  transition: all .4s;
  bottom: 0;
  box-shadow:0px 2px 2px #E46E47;
}


/* 下面是订单列表的样式 */
.orderList{
  background: #fff;
  width: 96%;
  border-radius: 20rpx;
  margin: 30rpx auto;
}
.orderList .orderList-top{
  border-bottom: 1rpx solid #f1f1f1;
  font-size: 26rpx;
  display: flex;
  justify-content: space-between;
  padding: 20rpx;
}
.orderList .orderList-top .t1{
  color: #333;
}
.orderList .orderList-top .t2{
  color: red; 
  font-weight: 600;
}

.orderList .orderList-product-box{
  display: flex;
  justify-content: space-around;
  border-bottom: 1rpx solid #f1f1f1;
  align-items: center;
}
.orderList .orderList-product-box .orderList-product-img{
  width: 120rpx;
  height: 120rpx;
  margin: 30rpx 10rpx;
}
.orderList .orderList-product-box .orderList-product-More-img{
  width: 50rpx;
  height: 50rpx;
  margin: 0 40rpx;
}

.orderList .orderList-bottom{
  font-size: 26rpx;
  display: flex;
  justify-content: space-between;
  padding: 30rpx 20rpx;
}
.orderList .orderList-bottom .t1{
  color: #333;
}
.orderList .orderList-bottom .t1 .price{
  font-size: 32rpx;
  font-weight: 600;
}
.orderList .orderList-bottom .t2{
  color: #333;
  border:1rpx solid #A6A6A6;
  padding: 4rpx 20rpx;
  border-radius: 40rpx;
}