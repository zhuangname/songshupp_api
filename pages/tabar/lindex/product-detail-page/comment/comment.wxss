/* pages/commodity-detail/comment/comment.wxss */
page{
  background-color: #f5f5f5;
}

.commdity-box{
  display: flex;
  flex-direction: row;
  padding: 20rpx;
  width: 710rpx;
  height: 250rpx;
  background-color: #fff;
  border-top: 1rpx solid #eee;
  align-items: center;
}
.commdity-box .img{
  margin:0 30rpx 0 10rpx;
  width: 200rpx;
  height: 200rpx;
}

.message-shase{
  width: 450rpx;
  display: flex;
  flex-direction: row;
  height: 150rpx;
}

.message-box{
  width: 370rpx;
}

.name{
  font-size: 28rpx;
  font-weight: 600;
}

.buys{
  font-size: 24rpx;
  color: #bbb;
}

.shase-box{
  position: relative;
  margin-top: 10rpx;
  width: 80rpx;
  display: flex;
  align-items: center;
  height: 120rpx;
  border-left: 1rpx dashed #EE7069;
}

.shase-box image{
  position: absolute;
  right: 0rpx;
  width: 60rpx;
  height: 60rpx;
}

.commdity-message{
  width: 466rpx;
}

.value-time{
  display: flex;
  flex-direction: row;
  font-size: 30rpx;
  justify-content: space-between;
  height: 50rpx;
  width: 100%;
}

.value{
  color: #FB4E3C;
  font-weight: 600;
}

.time{
  display: flex;
  flex-direction: row;
  align-items: center;
}

.time-item{
  height: 40rpx;
  width: 40rpx;
  background-color: #373737;
  color: #fff;
  border-radius: 5rpx;
  line-height: 40rpx;
  text-align: center;
  font-size: 24rpx;
  margin: 0 5rpx;
}


.sqjqjqo{
  background: #fff;
  border-radius: 25rpx;
  width: 95%;
  margin:20rpx auto;
}
.comment-box{
  display: flex;
  flex-direction: row;
  align-items: center;
}
.comment-box image{
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
  margin: 20rpx;
}
.comment-box .comment-box-box{
  display: flex;
  flex-direction: row;
  align-items: center;
  font-size: 30rpx;
  color: #6A6A6A;
}

/* 底部样式 */
.botton-hidden {
  height: 100rpx;
  width: 100%;
}

/* 底部 */

.bottom-box {
  width: 100%;
  height: 90rpx;
  display: flex;
  flex-direction: row;
  position: fixed;
  bottom: 0;
  background-color: #fff;
}

.botton-hidden {
  height: 100rpx;
  width: 100%;
}

.botton-btn {
  width: 135rpx;
  height: 100rpx;
  text-align: center;
  position: relative;
}

.botton-btn image{
  width: 50rpx;
  height: 50rpx;
  margin: 8rpx;
}

.btn-text{
  margin-top: -20rpx;
  font-size: 20rpx;
}

.add {
  width: 240rpx;
  height: 100rpx;
  background-color: #f8c303;
  color: #fff;
  font-size: 32rpx;
  text-align: center;
  line-height: 100rpx;
}

.buy {
  width: 240rpx;
  height: 100rpx;
  background-color: #ff5444;
  color: #fff;
  font-size: 32rpx;
  text-align: center;
  line-height: 100rpx;
}
.detail-img{
  width: 100%;
  height: 180rpx
}
.hongdian{
  position: absolute;
  font-size: 20rpx;
  color: #fff;
  background: red;
  border-radius: 50%;
  padding: 5rpx;
  right: 20rpx;
  top: 5rpx;
  width: 30rpx;
}

