
page{
  height: 100%;
}
/* 最大view样式 */
.mainbox{   
  position: relative;
  padding: 20rpx 0;
  border-bottom:1rpx solid #eee;
}

/* 下面是搜索框的样式 */
.search-box{
  width: 90%;
  margin: auto;
  padding: 5rpx 0;
  background: #fff;
  border-radius: 40rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-items: flex-start;
  background: #F6F6F6;
}
.search-box .search-img{
  width: 35rpx;
  height: 35rpx;
  padding: 10rpx 10rpx 10rpx 20rpx;
}
.search-box .search-text{
  font-size: 26rpx;
  font-weight: 600;
  color: #000;
  padding: 10rpx;
}
.search-box .search-down{
  width: 20rpx;
  height: 20rpx;
  padding: 10rpx;
}
.search-plar{
  color: rgb(94, 94, 94);
  font-size: 28rpx;
  padding: 10rpx;
  display: inline-block;
  width: 50%;
}
/* 上面是搜索宽的样式 */

/* 上面是搜索出来的数据的样式 */
.activitybox{
  padding: 50rpx 50rpx 50rpx 20rpx;
  border-bottom: 1rpx solid #eee;
  display: flex;
  justify-content: space-between;
}
.activitybox .activity-img{
  border-radius:50%;
  width:106rpx;
  height:80rpx;
  margin:5px 10px;
}
.activitybox .activity-name{
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
  padding-right: 50rpx;
}
.activitybox .activity-name .t1{
  font-size: 34rpx;
  font-weight: 600;
  padding-bottom: 10rpx;
}
.activitybox .activity-name .t2{
  font-size: 26rpx;
  color: #E56059;
}
.activitybox .activity-location{
  font-size: 30rpx;
  padding-right: 50rpx;
}
.activitybox .activity-tuanzhang{
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  font-size: 30rpx;
  color: #ADADAD;
}
.activitybox .ctivity-right{
  width: 30rpx;
  height: 30rpx;
}
/* 上面是搜索出来的数据的样式 */

.nosearchnearbyCommunity{
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
  width: 100%;
  height: 80%;
}
.nosearchnearbyCommunity image{
  width: 280rpx;
  height: 280rpx;
}
.nosearchnearbyCommunity view{
  padding: 40rpx 0;
  color: #ADADAD;
  font-size: 32rpx;
}